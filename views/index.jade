            br
            input#comment-name(type='text', name='name')
            br
            | Email:
            br
            input#comment-email(type='text', name='email')
            br
            | Comment:
            br
            textarea#comment-text(name='comment')
            br
            input#comment-close(type='button', value='Close')
            input#comment-submit(type='submit', onclick='return false;')
  
  
